{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],               // "@/foo" → "src/foo"
      "@lib/*": ["src/lib/*"],        // "@lib/api" → "src/lib/api"
      "@api/*": ["src/api/*"],        // "@api/posts" → "src/api/posts"
      "@types": ["src/types/index"]   // "@types" → "src/types/index.ts"
    },
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
